# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Google OAuth (for Supabase Auth - used in supabase/config.toml)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Backend API Configuration
VITE_BACKEND_API_URL=https://loopops-282035616357.northamerica-south1.run.app

# Proxy Configuration
# Set to 'true' to enable proxy for API requests (solves CORS in development)
# When enabled, set VITE_BACKEND_API_URL to '/api'
# When disabled, set VITE_BACKEND_API_URL to the full backend URL
VITE_USE_PROXY=false

# App Configuration
VITE_APP_VERSION=1.0.0

# Debug Options
# Set to 'true' to show debug/development routes in production builds
# Routes like /landing, /login, /signup, /onboarding will be visible
# In development mode (npm run dev), debug routes are always shown
VITE_SHOW_DEBUG_ROUTES=false


